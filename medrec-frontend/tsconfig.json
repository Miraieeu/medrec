{
  "compilerOptions": {
    "target": "ES2017",
    "types": ["next-auth"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
   
    "baseUrl": ".",                     // ðŸ‘ˆ INI YANG HILANG
    "paths": {
      
      "@/*": ["./*"],
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"]                    // ðŸ‘ˆ alias root project
    },

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
