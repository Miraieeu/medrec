{
  "name": "Threat Modeling",
  "on": ["push"],
  "jobs": {
    "threat": {
      "runs-on": "ubuntu-latest",
      "steps": [
        {
          "uses": "actions/checkout@v4"
        },
        {
          "name": "Run Semgrep",
          "run": "semgrep --config=auto --json > semgrep.json"
        },
        {
          "name": "Generate Threat Model",
          "run": "node scripts/generate-threats.js"
        }
      ]
    }
  }
}
