generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////
// USER & ROLE
//////////////////////

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  role     Role

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  medicalRecords MedicalRecord[] @relation("DoctorRecords")
  createdQueues  Queue[]         @relation("QueueCreatedBy")

  auditLogs AuditLog[]
  authLogs  AuthLog[]
}

enum Role {
  registration
  nurse
  doctor
  admin
}

//////////////////////
// PATIENT
//////////////////////

model Patient {
  id Int @id @default(autoincrement())

  medicalRecordNumber String   @unique
  name                String
  nik                 String
  nikHash             String   @unique
  dob                 DateTime
  address             String

  records MedicalRecord[]
  queues  Queue[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//////////////////////
// MEDICAL RECORD
//////////////////////

model MedicalRecord {
  id Int @id @default(autoincrement())

  patient   Patient @relation(fields: [patientId], references: [id])
  patientId Int

  doctorId Int?
  doctor   User? @relation("DoctorRecords", fields: [doctorId], references: [id])

  subjective  String
  objective   String
  assessment  String
  nursingPlan String

  pharmacologyPlan    String?
  nonPharmacologyPlan String?

  visitDate DateTime            @default(now())
  status    MedicalRecordStatus @default(DRAFT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([patientId, visitDate])
}

enum MedicalRecordStatus {
  DRAFT
  FINAL
}

//////////////////////
// QUEUE
//////////////////////

model Queue {
  id Int @id @default(autoincrement())

  number Int
  date   DateTime
  status QueueStatus @default(WAITING)

  patient   Patient @relation(fields: [patientId], references: [id])
  patientId Int

  createdBy   User @relation("QueueCreatedBy", fields: [createdById], references: [id])
  createdById Int

  createdAt DateTime @default(now())

  @@unique([number, date])
}

enum QueueStatus {
  WAITING
  CALLED
  DONE
}

//////////////////////
// AUDIT LOG
//////////////////////

model AuditLog {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  action   AuditAction
  entity   String
  entityId Int
  metadata Json?

  createdAt DateTime @default(now())
}

enum AuditAction {
  // ===== QUEUE =====
  CREATE_QUEUE
  CALL_QUEUE
  DONE_QUEUE

  // ===== MEDICAL RECORD =====
  UPDATE_NURSING
  FINALIZE_RECORD

  // ===== USER (ADMIN) =====
  CREATE_USER
  UPDATE_USER
  UPDATE_USER_ROLE
  DELETE_USER
}

//////////////////////
// AUTH LOG (LOGIN / LOGOUT)
//////////////////////

model AuthLog {
  id Int @id @default(autoincrement())

  userId Int?
  user   User? @relation(fields: [userId], references: [id])

  email     String
  action    AuthAction
  ipAddress String?
  userAgent String?

  createdAt DateTime @default(now())
}

enum AuthAction {
  LOGIN_SUCCESS
  LOGIN_FAILED
  LOGOUT
}
